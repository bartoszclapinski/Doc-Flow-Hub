@page
@using DocFlowHub.Web.Extensions
@model DocFlowHub.Web.Pages.Teams.IndexModel
@{
    ViewData["Title"] = "Teams";
}

<div class="teams-container">
    <!-- Modern Page Header -->
    <div class="teams-page-header">
        <div class="page-header-content">
            <div class="page-header-info">
                <h1 class="page-title">
                    <div class="page-icon">üë•</div>
                    My Teams
                </h1>
                <p class="page-subtitle">Collaborate with others on shared documents</p>
            </div>
            <div class="page-header-actions">
                <a asp-page="./Create" class="modern-btn modern-btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    <span>Create Team</span>
                </a>
            </div>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="modern-alert modern-alert-danger">
            <div class="alert-icon">‚ö†Ô∏è</div>
            <div class="alert-content">@Model.ErrorMessage</div>
            <button type="button" class="alert-close" onclick="this.parentElement.remove()">√ó</button>
        </div>
    }

    <div class="teams-layout">
        <!-- Filter Sidebar -->
        <div class="teams-filter-sidebar">
            <div class="filter-card">
                <div class="filter-header">
                    <h3 class="filter-title">
                        <i class="bi bi-funnel"></i>
                        Filters
                    </h3>
                </div>
                <form method="get" class="filter-form">
                    <div class="filter-group">
                        <label asp-for="Filter.SearchTerm" class="filter-label">
                            <i class="bi bi-search"></i>
                            Search
                        </label>
                        <input asp-for="Filter.SearchTerm" class="filter-input" placeholder="Search teams...">
                    </div>

                    <div class="filter-group">
                        <label asp-for="Filter.Role" class="filter-label">
                            <i class="bi bi-person-badge"></i>
                            My Role
                        </label>
                        <select asp-for="Filter.Role" class="filter-select">
                            <option value="">All Teams</option>
                            <option value="Admin">Teams I Own</option>
                            <option value="Member">Teams I'm Member Of</option>
                        </select>
                    </div>

                    <div class="filter-buttons">
                        <button type="submit" class="filter-btn filter-btn-primary">
                            <i class="bi bi-search"></i>
                            Apply
                        </button>
                        <a asp-page="./Index" class="filter-btn filter-btn-secondary">
                            <i class="bi bi-arrow-clockwise"></i>
                            Clear
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Teams Grid -->
        <div class="teams-content">
            @if (!Model.Teams.Items.Any())
            {
                <div class="teams-empty-state">
                    <div class="empty-icon">üë•</div>
                    <h3>No teams found</h3>
                    <p>Create your first team or join an existing one to get started.</p>
                    <a asp-page="./Create" class="empty-action-btn">
                        <i class="bi bi-plus-circle"></i>
                        Create Team
                    </a>
                </div>
            }
            else
            {
                <div class="teams-results-bar">
                    <span class="results-count">@Model.Teams.TotalItems</span> team@(Model.Teams.TotalItems != 1 ? "s" : "") found
                </div>

                <div class="teams-grid">
                    @foreach (var team in Model.Teams.Items)
                    {
                        <div class="team-card">
                            <div class="team-card-header">
                                <div class="team-icon">
                                    <i class="bi bi-people-fill"></i>
                                </div>
                                <div class="team-header-info">
                                    <h3 class="team-name">@team.Name</h3>
                                    <span class="member-badge">@team.MemberCount member@(team.MemberCount != 1 ? "s" : "")</span>
                                </div>
                                @if (team.OwnerId == User.GetUserId())
                                {
                                    <span class="role-badge owner">
                                        <i class="bi bi-star-fill"></i>
                                        Owner
                                    </span>
                                }
                                else
                                {
                                    <span class="role-badge member">
                                        <i class="bi bi-person-check"></i>
                                        Member
                                    </span>
                                }
                            </div>

                            <div class="team-card-body">
                                @if (!string.IsNullOrEmpty(team.Description))
                                {
                                    <p class="team-description">@team.Description</p>
                                }
                                else
                                {
                                    <p class="team-description no-desc">No description provided</p>
                                }

                                <div class="team-meta">
                                    <div class="meta-item">
                                        <i class="bi bi-calendar3"></i>
                                        <span>Created @team.CreatedAt.ToString("MMM dd, yyyy")</span>
                                    </div>
                                    <div class="meta-item">
                                        <i class="bi bi-person"></i>
                                        <span>Owner: @(team.OwnerName ?? "Unknown")</span>
                                    </div>
                                </div>
                            </div>

                            <div class="team-card-footer">
                                <a asp-page="./Details" asp-route-id="@team.Id" class="team-btn primary">
                                    <i class="bi bi-eye"></i>
                                    View
                                </a>
                                @if (team.OwnerId == User.GetUserId())
                                {
                                    <a asp-page="./Edit" asp-route-id="@team.Id" class="team-btn secondary">
                                        <i class="bi bi-pencil"></i>
                                        Edit
                                    </a>
                                }
                            </div>
                        </div>
                    }
                </div>

                @if (Model.Teams.TotalPages > 1)
                {
                    <div class="teams-pagination">
                        @for (var i = 1; i <= Model.Teams.TotalPages; i++)
                        {
                            <a class="pagination-number @(i == Model.Teams.PageNumber ? "active" : "")" 
                               asp-page="./Index" asp-route-pageNumber="@i" 
                               asp-route-searchTerm="@Model.Filter.SearchTerm" 
                               asp-route-role="@Model.Filter.Role">@i</a>
                        }
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Styles {
<style>
    /* ===== TEAMS INDEX STYLES ===== */
    
    .teams-container {
        padding: 2rem;
        max-width: 1400px;
        margin: 0 auto;
    }
    
    /* Page Header */
    .teams-page-header { margin-bottom: 2rem; }
    
    .teams-page-header .page-header-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 1.5rem;
    }
    
    .teams-page-header .page-title {
        font-size: 2rem;
        font-weight: 700;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 0.75rem;
        margin: 0;
    }
    
    .teams-page-header .page-icon { font-size: 2.5rem; }
    
    .teams-page-header .page-subtitle {
        color: var(--text-secondary);
        margin: 0.5rem 0 0 0;
        font-size: 1.1rem;
    }
    
    .modern-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.25rem;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .modern-btn-primary {
        background: linear-gradient(135deg, var(--accent-color) 0%, rgba(5, 150, 105, 0.8) 100%);
        color: white;
    }
    
    .modern-btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(5, 150, 105, 0.3);
        color: white;
    }
    
    /* Alert */
    .modern-alert {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem 1.25rem;
        border-radius: 12px;
        margin-bottom: 1.5rem;
    }
    
    .modern-alert-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #dc2626;
    }
    
    .modern-alert .alert-icon { font-size: 1.25rem; }
    .modern-alert .alert-content { flex: 1; font-weight: 500; }
    .modern-alert .alert-close {
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        opacity: 0.6;
        line-height: 1;
    }
    
    /* Layout */
    .teams-layout {
        display: grid;
        grid-template-columns: 280px 1fr;
        gap: 2rem;
    }
    
    /* Filter Sidebar */
    .filter-card {
        background: var(--surface-primary);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        padding: 1.5rem;
        position: sticky;
        top: 2rem;
    }
    
    .filter-header { margin-bottom: 1.25rem; }
    
    .filter-title {
        font-size: 1rem;
        font-weight: 600;
        color: var(--text-primary);
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
    }
    
    .filter-title i { color: var(--accent-color); }
    
    .filter-form { display: flex; flex-direction: column; gap: 1rem; }
    
    .filter-group { display: flex; flex-direction: column; gap: 0.5rem; }
    
    .filter-label {
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--text-secondary);
        display: flex;
        align-items: center;
        gap: 0.35rem;
    }
    
    .filter-input,
    .filter-select {
        padding: 0.65rem 1rem;
        border: 1px solid var(--border-color);
        border-radius: 10px;
        background: var(--surface-secondary);
        color: var(--text-primary);
        font-size: 0.9rem;
        transition: all 0.2s ease;
    }
    
    .filter-input:focus,
    .filter-select:focus {
        outline: none;
        border-color: var(--accent-color);
        box-shadow: 0 0 0 3px rgba(5, 150, 105, 0.1);
    }
    
    .filter-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 0.5rem;
    }
    
    .filter-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.35rem;
        padding: 0.65rem 1rem;
        border-radius: 10px;
        font-weight: 500;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.2s ease;
        border: none;
        cursor: pointer;
    }
    
    .filter-btn-primary { background: var(--accent-color); color: white; }
    .filter-btn-primary:hover { background: rgba(5, 150, 105, 0.9); }
    .filter-btn-secondary {
        background: var(--surface-secondary);
        color: var(--text-secondary);
        border: 1px solid var(--border-color);
    }
    .filter-btn-secondary:hover { color: var(--text-primary); }
    
    /* Results Bar */
    .teams-results-bar {
        margin-bottom: 1.25rem;
        font-size: 0.9rem;
        color: var(--text-secondary);
    }
    
    .results-count {
        font-weight: 600;
        color: var(--text-primary);
    }
    
    /* Teams Grid */
    .teams-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    
    /* Team Card */
    .team-card {
        background: var(--surface-primary);
        border: 1px solid var(--border-color);
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }
    
    .team-card:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-glass);
        border-color: var(--accent-color);
    }
    
    .team-card-header {
        display: flex;
        align-items: flex-start;
        gap: 1rem;
        padding: 1.25rem 1.25rem 0;
    }
    
    .team-icon {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.25rem;
        color: #06b6d4;
        background: linear-gradient(135deg, rgba(6, 182, 212, 0.2) 0%, rgba(6, 182, 212, 0.1) 100%);
        flex-shrink: 0;
    }
    
    .team-header-info { flex: 1; min-width: 0; }
    
    .team-name {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-primary);
        margin: 0 0 0.35rem 0;
    }
    
    .member-badge {
        font-size: 0.75rem;
        font-weight: 500;
        padding: 0.2rem 0.5rem;
        border-radius: 6px;
        background: rgba(107, 114, 128, 0.15);
        color: var(--text-secondary);
    }
    
    .role-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.25rem;
        padding: 0.3rem 0.6rem;
        border-radius: 8px;
        font-size: 0.7rem;
        font-weight: 600;
        flex-shrink: 0;
    }
    
    .role-badge.owner {
        background: rgba(234, 179, 8, 0.15);
        color: #ca8a04;
    }
    
    .role-badge.member {
        background: rgba(59, 130, 246, 0.15);
        color: #3b82f6;
    }
    
    .team-card-body {
        padding: 1rem 1.25rem;
        flex: 1;
    }
    
    .team-description {
        font-size: 0.85rem;
        color: var(--text-secondary);
        margin: 0 0 1rem 0;
        line-height: 1.5;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .team-description.no-desc {
        font-style: italic;
        opacity: 0.6;
    }
    
    .team-meta {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
    }
    
    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.35rem;
        font-size: 0.8rem;
        color: var(--text-tertiary);
    }
    
    .team-card-footer {
        display: flex;
        gap: 0.5rem;
        padding: 1rem 1.25rem;
        border-top: 1px solid var(--border-color);
        background: var(--surface-secondary);
    }
    
    .team-btn {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.35rem;
        padding: 0.6rem;
        border-radius: 10px;
        font-size: 0.85rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.2s ease;
    }
    
    .team-btn.primary {
        background: var(--accent-color);
        color: white;
    }
    
    .team-btn.primary:hover {
        background: rgba(5, 150, 105, 0.9);
        color: white;
    }
    
    .team-btn.secondary {
        background: var(--surface-primary);
        color: var(--text-secondary);
        border: 1px solid var(--border-color);
    }
    
    .team-btn.secondary:hover {
        color: var(--text-primary);
    }
    
    /* Empty State */
    .teams-empty-state {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 4rem 2rem;
        text-align: center;
        background: var(--surface-primary);
        border: 1px solid var(--border-color);
        border-radius: 16px;
    }
    
    .teams-empty-state .empty-icon { font-size: 4rem; margin-bottom: 1.5rem; opacity: 0.6; }
    .teams-empty-state h3 { font-size: 1.25rem; font-weight: 600; color: var(--text-primary); margin: 0 0 0.5rem 0; }
    .teams-empty-state p { font-size: 0.95rem; color: var(--text-secondary); margin: 0 0 1.5rem 0; }
    
    .empty-action-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        font-size: 0.9rem;
        font-weight: 600;
        color: white;
        background: linear-gradient(135deg, var(--accent-color) 0%, rgba(5, 150, 105, 0.8) 100%);
        border-radius: 12px;
        text-decoration: none;
        transition: all 0.3s ease;
    }
    
    .empty-action-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(5, 150, 105, 0.3);
        color: white;
    }
    
    /* Pagination */
    .teams-pagination {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.25rem;
        margin-top: 2rem;
    }
    
    .pagination-number {
        width: 36px;
        height: 36px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 10px;
        font-size: 0.85rem;
        font-weight: 500;
        color: var(--text-secondary);
        text-decoration: none;
        background: var(--surface-primary);
        border: 1px solid var(--border-color);
        transition: all 0.2s ease;
    }
    
    .pagination-number:hover {
        background: var(--surface-secondary);
        color: var(--text-primary);
    }
    
    .pagination-number.active {
        background: var(--accent-color);
        color: white;
        border-color: var(--accent-color);
    }
    
    /* ===== RESPONSIVE DESIGN ===== */
    @@media (max-width: 1024px) {
        .teams-layout {
            grid-template-columns: 1fr;
        }
        
        .filter-card {
            position: static;
        }
        
        .filter-buttons {
            flex-direction: row;
        }
        
        .filter-btn { flex: 1; }
    }
    
    @@media (max-width: 768px) {
        .teams-container { padding: 1rem; }
        
        .teams-page-header .page-header-content {
            flex-direction: column;
            align-items: flex-start;
        }
        
        .teams-page-header .page-title { font-size: 1.5rem; }
        
        .teams-grid {
            grid-template-columns: 1fr;
        }
    }
    
    /* ===== DARK THEME ADJUSTMENTS ===== */
    [data-theme="dark"] .filter-card { background: rgba(45, 45, 45, 0.8); }
    [data-theme="dark"] .team-card { background: rgba(45, 45, 45, 0.8); }
    [data-theme="dark"] .team-card-footer { background: rgba(60, 60, 60, 0.5); }
    [data-theme="dark"] .teams-empty-state { background: rgba(45, 45, 45, 0.8); }
</style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Add loading state to form submission
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', function() {
                    const submitBtn = this.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<i class="bi bi-arrow-clockwise spin me-1"></i>Applying...';
                    }
                });
            }
        });
    </script>
}
