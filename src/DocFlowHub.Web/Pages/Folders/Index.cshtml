@page
@model DocFlowHub.Web.Pages.Folders.IndexModel
@{
    ViewData["Title"] = "Folders";
}

<div class="folders-container">
    <!-- Modern Breadcrumb -->
    <nav class="modern-breadcrumb" aria-label="breadcrumb">
        <a asp-page="/Index" class="breadcrumb-link">
            <i class="bi bi-house"></i>
            <span>Home</span>
        </a>
        <i class="bi bi-chevron-right breadcrumb-separator"></i>
        <a asp-page="/Projects/Index" class="breadcrumb-link">
            <i class="bi bi-kanban"></i>
            <span>Projects</span>
        </a>
        @if (Model.Project != null)
        {
            <i class="bi bi-chevron-right breadcrumb-separator"></i>
            <a asp-page="/Projects/Details" asp-route-id="@Model.Project.Id" class="breadcrumb-link">
                <i class="bi bi-@Model.Project.Icon"></i>
                <span>@Model.Project.Name</span>
            </a>
        }
        <i class="bi bi-chevron-right breadcrumb-separator"></i>
        <span class="breadcrumb-current">
            <i class="bi bi-folder"></i>
            Folders
        </span>
    </nav>

    <!-- Modern Page Header -->
    <div class="folders-page-header">
        <div class="page-header-content">
            <div class="page-header-info">
                <h1 class="page-title">
                    <div class="page-icon">üìÅ</div>
                    Folders
                </h1>
                @if (Model.Project != null)
                {
                    <p class="page-subtitle">Managing folders in <strong>@Model.Project.Name</strong></p>
                }
            </div>
            <div class="page-header-actions">
                <a asp-page="/Folders/Create" asp-route-projectId="@Model.ProjectId" class="modern-btn modern-btn-primary">
                    <i class="bi bi-plus-circle"></i>
                    <span>New Folder</span>
                </a>
                <a asp-page="/Projects/Details" asp-route-id="@Model.ProjectId" class="modern-btn modern-btn-secondary">
                    <i class="bi bi-arrow-left"></i>
                    <span>Back to Project</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Modern Filter Panel -->
    <div class="folders-filter-panel">
        <div class="filter-header">
            <h3 class="filter-title">
                <i class="bi bi-funnel"></i>
                Filter Folders
            </h3>
        </div>
        <form method="get" class="filter-form">
            <input type="hidden" asp-for="ProjectId" />
            <div class="filter-grid">
                <div class="filter-group">
                    <label asp-for="Filter.SearchTerm" class="filter-label">
                        <i class="bi bi-search"></i>
                        Search
                    </label>
                    <input asp-for="Filter.SearchTerm" class="filter-input" placeholder="Search by folder name..." />
                </div>
                
                <div class="filter-group">
                    <label asp-for="Filter.Status" class="filter-label">
                        <i class="bi bi-toggle-on"></i>
                        Status
                    </label>
                    <select asp-for="Filter.Status" class="filter-select">
                        <option value="">All Status</option>
                        <option value="Active">Active</option>
                        <option value="Archived">Archived</option>
                    </select>
                </div>
                
                <div class="filter-group">
                    <label asp-for="Filter.SortBy" class="filter-label">
                        <i class="bi bi-sort-down"></i>
                        Sort By
                    </label>
                    <select asp-for="Filter.SortBy" class="filter-select">
                        <option value="Name">Name</option>
                        <option value="CreatedAt">Created Date</option>
                        <option value="UpdatedAt">Modified Date</option>
                        <option value="Level">Folder Level</option>
                    </select>
                </div>
                
                <div class="filter-actions">
                    <button type="submit" class="filter-btn filter-btn-primary">
                        <i class="bi bi-search"></i>
                        Search
                    </button>
                </div>
            </div>
        </form>
    </div>

    <!-- Folder Tree Card -->
    <div class="folders-tree-card">
        <div class="tree-card-header">
            <div class="tree-header-title">
                <div class="tree-icon">üóÇÔ∏è</div>
                <h3>Folder Structure</h3>
            </div>
            <div class="tree-header-actions">
                <button type="button" class="tree-action-btn" id="expandAll">
                    <i class="bi bi-arrows-expand"></i>
                    <span>Expand All</span>
                </button>
                <button type="button" class="tree-action-btn" id="collapseAll">
                    <i class="bi bi-arrows-collapse"></i>
                    <span>Collapse All</span>
                </button>
            </div>
        </div>
        
        <div class="tree-search-bar">
            <i class="bi bi-search"></i>
            <input type="text" id="folderSearch" class="tree-search-input" placeholder="Quick search folders..." />
        </div>
        
        <div class="tree-card-body">
            @if (!Model.Folders.Items.Any())
            {
                <!-- Empty State -->
                <div class="folders-empty-state">
                    <div class="empty-icon">üìÇ</div>
                    <h3>No folders yet</h3>
                    <p>Get started by creating your first folder to organize your documents.</p>
                    <a asp-page="/Folders/Create" asp-route-projectId="@Model.ProjectId" class="empty-action-btn">
                        <i class="bi bi-plus-circle"></i>
                        Create First Folder
                    </a>
                </div>
            }
            else
            {
                <!-- Folder Tree -->
                <div class="folder-tree" id="folderTree">
                    @foreach (var folder in Model.Folders.Items.Where(f => f.ParentFolderId == null))
                    {
                        <partial name="_FolderTreeNode" model="folder" />
                    }
                </div>
            }
        </div>
    </div>

    <!-- Modern Pagination -->
    @if (Model.Folders.TotalPages > 1)
    {
        <div class="folders-pagination">
            @if (Model.Folders.PageNumber > 1)
            {
                <a class="pagination-btn" asp-page="./Index" asp-route-pageNumber="@(Model.Folders.PageNumber - 1)" 
                   asp-route-projectId="@Model.ProjectId" asp-route-searchTerm="@Model.Filter.SearchTerm" 
                   asp-route-status="@Model.Filter.Status" asp-route-sortBy="@Model.Filter.SortBy">
                    <i class="bi bi-chevron-left"></i>
                    <span>Previous</span>
                </a>
            }

            <div class="pagination-numbers">
                @for (int i = 1; i <= Model.Folders.TotalPages; i++)
                {
                    <a class="pagination-number @(i == Model.Folders.PageNumber ? "active" : "")" 
                       asp-page="./Index" asp-route-pageNumber="@i" 
                       asp-route-projectId="@Model.ProjectId" asp-route-searchTerm="@Model.Filter.SearchTerm" 
                       asp-route-status="@Model.Filter.Status" asp-route-sortBy="@Model.Filter.SortBy">@i</a>
                }
            </div>

            @if (Model.Folders.PageNumber < Model.Folders.TotalPages)
            {
                <a class="pagination-btn" asp-page="./Index" asp-route-pageNumber="@(Model.Folders.PageNumber + 1)" 
                   asp-route-projectId="@Model.ProjectId" asp-route-searchTerm="@Model.Filter.SearchTerm" 
                   asp-route-status="@Model.Filter.Status" asp-route-sortBy="@Model.Filter.SortBy">
                    <span>Next</span>
                    <i class="bi bi-chevron-right"></i>
                </a>
            }
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modern-modal">
            <div class="modal-header">
                <div class="modal-title-wrapper">
                    <div class="modal-icon danger">üóëÔ∏è</div>
                    <h5 class="modal-title" id="deleteModalLabel">Delete Folder</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the folder <strong id="folderName"></strong>?</p>
                <div class="modal-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <span><strong>Warning:</strong> This action cannot be undone. All documents and subfolders in this folder will also be deleted.</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="modal-btn modal-btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete" style="display: inline;">
                    <input type="hidden" id="folderIdToDelete" name="id" />
                    <button type="submit" class="modal-btn modal-btn-danger">
                        <i class="bi bi-trash"></i> Delete Folder
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

