        margin: 0 auto;
    }
    
    /* Modern Breadcrumb */
    .modern-breadcrumb {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 1rem 1.25rem;
        background: var(--surface-primary);
