@page
@using DocFlowHub.Web.Extensions
@model DocFlowHub.Web.Pages.Folders.DetailsModel
@{
    ViewData["Title"] = $"Folder: {Model.Folder?.Name}";
}

<div class="folder-details-container">
    <!-- Modern Breadcrumb -->
    <nav class="modern-breadcrumb" aria-label="breadcrumb">
        <a asp-page="/Index" class="breadcrumb-link">
            <i class="bi bi-house"></i>
            <span>Home</span>
        </a>
        <i class="bi bi-chevron-right breadcrumb-separator"></i>
        <a asp-page="/Projects/Index" class="breadcrumb-link">
            <i class="bi bi-kanban"></i>
            <span>Projects</span>
        </a>
        @if (Model.Project != null)
        {
            <i class="bi bi-chevron-right breadcrumb-separator"></i>
            <a asp-page="/Projects/Details" asp-route-id="@Model.Project.Id" class="breadcrumb-link">
                <i class="bi bi-@Model.Project.Icon"></i>
                <span>@Model.Project.Name</span>
            </a>
            <i class="bi bi-chevron-right breadcrumb-separator"></i>
            <a asp-page="/Folders/Index" asp-route-projectId="@Model.Project.Id" class="breadcrumb-link">
                <i class="bi bi-folder"></i>
                <span>Folders</span>
            </a>
        }
        @if (Model.Folder != null && Model.FolderPath.Any())
        {
            @foreach (var pathItem in Model.FolderPath)
            {
                <i class="bi bi-chevron-right breadcrumb-separator"></i>
                <a asp-page="/Folders/Details" asp-route-id="@pathItem.Id" class="breadcrumb-link">
                    <i class="bi bi-folder"></i>
                    <span>@pathItem.Name</span>
                </a>
            }
        }
        <i class="bi bi-chevron-right breadcrumb-separator"></i>
        <span class="breadcrumb-current">
            <i class="bi bi-folder-fill"></i>
            @Model.Folder?.Name
        </span>
    </nav>

    @if (Model.Folder == null)
    {
        <!-- Error State -->
        <div class="folder-not-found">
            <div class="not-found-icon">üîç</div>
            <h3>Folder not found</h3>
            <p>The folder you're looking for doesn't exist or you don't have access to it.</p>
            <a asp-page="/Projects/Index" class="back-btn">
                <i class="bi bi-arrow-left"></i>
                Back to Projects
            </a>
        </div>
    }
    else
    {
        <!-- Folder Header -->
        <div class="folder-header">
            <div class="folder-header-main">
                <div class="folder-icon-large">üìÅ</div>
                <div class="folder-header-info">
                    <h1 class="folder-name">@Model.Folder.Name</h1>
                    @if (!string.IsNullOrEmpty(Model.Folder.Description))
                    {
                        <p class="folder-description">@Model.Folder.Description</p>
                    }
                    <div class="folder-meta">
                        <span class="meta-item">
                            <i class="bi bi-calendar3"></i>
                            Created @Model.Folder.CreatedAt.ToString("MMM dd, yyyy")
                        </span>
                        @if (Model.Folder.UpdatedAt.HasValue)
                        {
                            <span class="meta-item">
                                <i class="bi bi-clock"></i>
                                Modified @Model.Folder.UpdatedAt.Value.ToString("MMM dd, yyyy")
                            </span>
                        }
                        <span class="status-badge @(Model.Folder.IsArchived ? "archived" : "active")">
                            <i class="bi bi-@(Model.Folder.IsArchived ? "archive" : "check-circle")"></i>
                            @(Model.Folder.IsArchived ? "Archived" : "Active")
                        </span>
                    </div>
                </div>
            </div>
            <div class="folder-header-actions">
                <a asp-page="/Folders/Edit" asp-route-id="@Model.Folder.Id" class="action-btn action-btn-primary">
                    <i class="bi bi-pencil"></i>
                    <span>Edit Folder</span>
                </a>
                <div class="dropdown">
                    <button class="action-btn action-btn-secondary dropdown-toggle" type="button" 
                            data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end modern-dropdown">
                        <li>
                            <a class="dropdown-item" asp-page="/Folders/Create" asp-route-projectId="@Model.Folder.ProjectId" asp-route-parentFolderId="@Model.Folder.Id">
                                <i class="bi bi-folder-plus"></i>Create Subfolder
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-page="/Documents/Upload" asp-route-projectId="@Model.Folder.ProjectId" asp-route-folderId="@Model.Folder.Id">
                                <i class="bi bi-upload"></i>Upload Document
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        @if (Model.Folder.IsArchived)
                        {
                            <li>
                                <form method="post" asp-page-handler="Restore" style="display: inline; width: 100%;">
                                    <input type="hidden" name="id" value="@Model.Folder.Id" />
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-arrow-clockwise"></i>Restore Folder
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li>
                                <form method="post" asp-page-handler="Archive" style="display: inline; width: 100%;">
                                    <input type="hidden" name="id" value="@Model.Folder.Id" />
                                    <button type="submit" class="dropdown-item">
                                        <i class="bi bi-archive"></i>Archive Folder
                                    </button>
                                </form>
                            </li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <button type="button" class="dropdown-item text-danger btn-delete-folder" 
                                    data-folder-id="@Model.Folder.Id" data-folder-name="@Model.Folder.Name">
                                <i class="bi bi-trash"></i>Delete Folder
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="folder-stats-grid">
            <div class="folder-stat-card blue">
                <div class="stat-card-icon">üìÑ</div>
                <div class="stat-card-info">
                    <div class="stat-card-value">@Model.TotalDocuments</div>
                    <div class="stat-card-label">Documents</div>
                </div>
            </div>
            <div class="folder-stat-card cyan">
                <div class="stat-card-icon">üìÇ</div>
                <div class="stat-card-info">
                    <div class="stat-card-value">@Model.TotalSubfolders</div>
                    <div class="stat-card-label">Subfolders</div>
                </div>
            </div>
            <div class="folder-stat-card green">
                <div class="stat-card-icon">üíæ</div>
                <div class="stat-card-info">
                    <div class="stat-card-value">@Model.FormatFileSize(Model.TotalSize)</div>
                    <div class="stat-card-label">Folder Size</div>
                </div>
            </div>
            <div class="folder-stat-card yellow">
                <div class="stat-card-icon">üìä</div>
                <div class="stat-card-info">
                    <div class="stat-card-value">@Model.FolderPath.Count()</div>
                    <div class="stat-card-label">Path Depth</div>
                </div>
            </div>
        </div>

        <!-- Content Tabs -->
        <div class="folder-content-card">
            <div class="content-tabs-header">
                <ul class="modern-tabs" id="folderTabs" role="tablist">
                    <li role="presentation">
                        <button class="tab-btn active" id="documents-tab" data-bs-toggle="tab" 
                                data-bs-target="#documents" type="button" role="tab">
                            <i class="bi bi-file-earmark"></i>
                            <span>Documents</span>
                            <span class="tab-badge">@Model.Folder.DocumentCount</span>
                        </button>
                    </li>
                    <li role="presentation">
                        <button class="tab-btn" id="subfolders-tab" data-bs-toggle="tab" 
                                data-bs-target="#subfolders" type="button" role="tab">
                            <i class="bi bi-folder"></i>
                            <span>Subfolders</span>
                            <span class="tab-badge">@(Model.Folder.Children?.Count() ?? 0)</span>
                        </button>
                    </li>
                    <li role="presentation">
                        <button class="tab-btn" id="details-tab" data-bs-toggle="tab" 
                                data-bs-target="#details" type="button" role="tab">
                            <i class="bi bi-info-circle"></i>
                            <span>Details</span>
                        </button>
                    </li>
                </ul>
            </div>
            <div class="content-tabs-body">
                <div class="tab-content" id="folderTabsContent">
                    <!-- Documents Tab -->
                    <div class="tab-pane fade show active" id="documents" role="tabpanel">
                        @if (Model.Documents.Any())
                        {
                            <div class="documents-list">
                                @foreach (var document in Model.Documents)
                                {
                                    <div class="document-item">
                                        <div class="document-icon @GetFileIconClass(document.FileType)">
                                            <i class="bi @GetFileIcon(document.FileType)"></i>
                                        </div>
                                        <div class="document-info">
                                            <h4 class="document-title">@document.Title</h4>
                                            @if (!string.IsNullOrEmpty(document.Description))
                                            {
                                                <p class="document-desc">@document.Description</p>
                                            }
                                            <div class="document-meta">
                                                <span class="meta-badge">@document.FileType</span>
                                                <span>@(document.FileSize / 1024) KB</span>
                                                <span>@document.UpdatedAt?.ToString("MMM dd, yyyy")</span>
                                            </div>
                                        </div>
                                        <div class="document-actions">
                                            <a asp-page="/Documents/Details" asp-route-id="@document.Id" class="doc-action-btn" title="View">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="/Documents/Edit" asp-route-id="@document.Id" class="doc-action-btn" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button class="doc-action-btn" onclick="downloadDocument(@document.Id)" title="Download">
                                                <i class="bi bi-download"></i>
                                            </button>
                                            @if (document.OwnerId == User.GetUserId())
                                            {
                                                <button class="doc-action-btn danger" onclick="confirmDeleteDocument(@document.Id, '@Html.Raw(Html.Encode(document.Title))')" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="tab-empty-state">
                                <div class="empty-icon">üìÑ</div>
                                <h4>No documents in this folder</h4>
                                <p>Upload documents to get started.</p>
                                <a asp-page="/Documents/Upload" asp-route-projectId="@Model.Folder.ProjectId" asp-route-folderId="@Model.Folder.Id" 
                                   class="empty-action-btn">
                                    <i class="bi bi-upload"></i>
                                    Upload Document
                                </a>
                            </div>
                        }
                    </div>

                    <!-- Subfolders Tab -->
                    <div class="tab-pane fade" id="subfolders" role="tabpanel">
                        @if (Model.Folder.Children?.Any() == true)
                        {
                            <div class="subfolders-grid">
                                @foreach (var subfolder in Model.Folder.Children)
                                {
                                    <div class="subfolder-card">
                                        <div class="subfolder-icon">üìÅ</div>
                                        <div class="subfolder-info">
                                            <h4>@subfolder.Name</h4>
                                            @if (!string.IsNullOrEmpty(subfolder.Description))
                                            {
                                                <p class="subfolder-desc">@subfolder.Description</p>
                                            }
                                            <div class="subfolder-meta">
                                                <span><i class="bi bi-file-earmark"></i> @subfolder.DocumentCount docs</span>
                                                <span><i class="bi bi-folder"></i> @(subfolder.Children?.Count() ?? 0) sub</span>
                                            </div>
                                        </div>
                                        <div class="subfolder-actions">
                                            <a asp-page="/Folders/Details" asp-route-id="@subfolder.Id" class="subfolder-btn primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <a asp-page="/Folders/Edit" asp-route-id="@subfolder.Id" class="subfolder-btn secondary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="tab-empty-state">
                                <div class="empty-icon">üìÇ</div>
                                <h4>No subfolders</h4>
                                <p>Create subfolders to organize your content.</p>
                                <a asp-page="/Folders/Create" asp-route-projectId="@Model.Folder.ProjectId" asp-route-parentFolderId="@Model.Folder.Id" 
                                   class="empty-action-btn">
                                    <i class="bi bi-folder-plus"></i>
                                    Create Subfolder
                                </a>
                            </div>
                        }
                    </div>

                    <!-- Details Tab -->
                    <div class="tab-pane fade" id="details" role="tabpanel">
                        <div class="details-grid">
                            <div class="details-section">
                                <h5 class="details-section-title">
                                    <i class="bi bi-folder"></i>
                                    Folder Information
                                </h5>
                                <div class="details-list">
                                    <div class="detail-row">
                                        <span class="detail-label">Name</span>
                                        <span class="detail-value">@Model.Folder.Name</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Description</span>
                                        <span class="detail-value">@(string.IsNullOrEmpty(Model.Folder.Description) ? "No description" : Model.Folder.Description)</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Created</span>
                                        <span class="detail-value">@Model.Folder.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Modified</span>
                                        <span class="detail-value">@(Model.Folder.UpdatedAt?.ToString("MMMM dd, yyyy 'at' h:mm tt") ?? "Never")</span>
                                    </div>
                                </div>
                            </div>
                            <div class="details-section">
                                <h5 class="details-section-title">
                                    <i class="bi bi-diagram-3"></i>
                                    Hierarchy Information
                                </h5>
                                <div class="details-list">
                                    <div class="detail-row">
                                        <span class="detail-label">Project</span>
                                        <span class="detail-value">
                                            <a asp-page="/Projects/Details" asp-route-id="@Model.Project?.Id" class="detail-link">
                                                @Model.Project?.Name
                                            </a>
                                        </span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Level</span>
                                        <span class="detail-value">@Model.Folder.Level</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Path</span>
                                        <span class="detail-value detail-path">@Model.Folder.Path</span>
                                    </div>
                                    <div class="detail-row">
                                        <span class="detail-label">Status</span>
                                        <span class="detail-value">
                                            <span class="status-badge @(Model.Folder.IsArchived ? "archived" : "active")">
                                                @(Model.Folder.IsArchived ? "Archived" : "Active")
                                            </span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modern-modal">
            <div class="modal-header">
                <div class="modal-title-wrapper">
                    <div class="modal-icon danger">üóëÔ∏è</div>
                    <h5 class="modal-title" id="deleteModalLabel">Delete Folder</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the folder <strong id="folderName"></strong>?</p>
                <div class="modal-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <span><strong>Warning:</strong> This action cannot be undone. All documents and subfolders in this folder will also be deleted.</span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="modal-btn modal-btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page-handler="Delete" style="display: inline;">
                    <input type="hidden" id="folderIdToDelete" name="id" />
                    <button type="submit" class="modal-btn modal-btn-danger">
                        <i class="bi bi-trash"></i> Delete Folder
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetFileIcon(string fileType)
    {
        return fileType?.ToLower() switch
        {
            ".pdf" => "bi-file-earmark-pdf",
            ".doc" or ".docx" => "bi-file-earmark-word",
            ".txt" => "bi-file-earmark-text",
            ".md" => "bi-markdown",
            ".jpg" or ".jpeg" or ".png" or ".gif" => "bi-file-earmark-image",
            _ => "bi-file-earmark"
        };
    }

    private string GetFileIconClass(string fileType)
    {
        return fileType?.ToLower() switch
        {
            ".pdf" => "red",
            ".doc" or ".docx" => "blue",
            ".txt" => "cyan",
            ".md" => "purple",
            ".jpg" or ".jpeg" or ".png" or ".gif" => "green",
            _ => "gray"
        };
    }
}

@section Styles {
<style>
    /* ===== FOLDER DETAILS STYLES ===== */
    
    .folder-details-container {
        padding: 2rem;
