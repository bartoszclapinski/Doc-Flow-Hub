@page
@using DocFlowHub.Web.Extensions
@model DocFlowHub.Web.Pages.Projects.IndexModel
@{
    ViewData["Title"] = "Projects";
}

<div class="projects-container">
    <!-- Modern Page Header -->
    <div class="projects-page-header">
        <div class="page-header-content">
            <div class="page-header-info">
                <h1 class="page-title">
                    <div class="page-icon">üìã</div>
                    Projects
                </h1>
                <p class="page-subtitle">Organize your documents into projects</p>
            </div>
            <div class="page-header-actions">
                <a asp-page="./Create" class="modern-btn modern-btn-primary">
                    <i class="bi bi-plus-lg"></i>
                    <span>New Project</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="modern-alert modern-alert-danger">
            <div class="alert-icon">‚ö†Ô∏è</div>
            <div class="alert-content">@Model.ErrorMessage</div>
            <button type="button" class="alert-close" onclick="this.parentElement.remove()">√ó</button>
        </div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="modern-alert modern-alert-success">
            <div class="alert-icon">‚úÖ</div>
            <div class="alert-content">@TempData["SuccessMessage"]</div>
            <button type="button" class="alert-close" onclick="this.parentElement.remove()">√ó</button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="modern-alert modern-alert-danger">
            <div class="alert-icon">‚ùå</div>
            <div class="alert-content">@TempData["ErrorMessage"]</div>
            <button type="button" class="alert-close" onclick="this.parentElement.remove()">√ó</button>
        </div>
    }

    <!-- Modern Filter Panel -->
    <div class="projects-filter-panel">
        <div class="filter-header">
            <h3 class="filter-title">
                <i class="bi bi-funnel"></i>
                Filter Projects
            </h3>
        </div>
        <form method="get" class="filter-form">
            <div class="filter-grid">
                <!-- Search -->
                <div class="filter-group">
                    <label asp-for="Filter.SearchTerm" class="filter-label">
                        <i class="bi bi-search"></i>
                        Search
                    </label>
                    <input asp-for="Filter.SearchTerm" class="filter-input" 
                           placeholder="Search by name, description...">
                </div>

                <!-- Status Filter -->
                <div class="filter-group">
                    <label asp-for="Filter.IsActive" class="filter-label">
                        <i class="bi bi-toggle-on"></i>
                        Status
                    </label>
                    <select asp-for="Filter.IsActive" class="filter-select">
                        <option value="">All Projects</option>
                        <option value="true" selected="@(Model.Filter.IsActive == true)">Active</option>
                        <option value="false" selected="@(Model.Filter.IsActive == false)">Archived</option>
                    </select>
                </div>

                <!-- Date Range -->
                <div class="filter-group">
                    <label asp-for="Filter.CreatedAfter" class="filter-label">
                        <i class="bi bi-calendar3"></i>
                        Created After
                    </label>
                    <input asp-for="Filter.CreatedAfter" type="date" class="filter-input">
                </div>

                <!-- Filter Actions -->
                <div class="filter-actions">
                    <button type="submit" class="filter-btn filter-btn-primary">
                        <i class="bi bi-search"></i>
                        Apply
                    </button>
                    <a asp-page="./Index" class="filter-btn filter-btn-secondary">
                        <i class="bi bi-arrow-clockwise"></i>
                        Clear
                    </a>
                </div>
            </div>
        </form>
    </div>

    <!-- Projects Section -->
    @if (!Model.Projects.Items.Any())
    {
        <div class="projects-empty-state">
            <div class="empty-icon">üìã</div>
            <h3>No projects found</h3>
            <p>Create your first project to organize your documents</p>
            <a asp-page="./Create" class="empty-action-btn">
                <i class="bi bi-plus-lg"></i>
                Create Project
            </a>
        </div>
    }
    else
    {
        <!-- Results Bar -->
        <div class="projects-results-bar">
            <div class="results-info">
                <span class="results-count">@Model.Projects.TotalItems</span> projects found
                <span class="results-page">‚Ä¢ Page @Model.Projects.PageNumber of @Model.Projects.TotalPages</span>
            </div>
            <div class="results-sort">
                <span class="sort-label">Sort by:</span>
                <div class="sort-buttons">
                    <a href="@Model.GetSortUrl("name", "asc")" 
                       class="sort-btn @(ViewData["NameSortClass"]?.ToString() == "sort-asc" || ViewData["NameSortClass"]?.ToString() == "sort-desc" ? "active" : "")">
                        Name
                        @if (ViewData["NameSortClass"]?.ToString() == "sort-asc")
                        {
                            <i class="bi bi-caret-up-fill"></i>
                        }
                        else if (ViewData["NameSortClass"]?.ToString() == "sort-desc")
                        {
                            <i class="bi bi-caret-down-fill"></i>
                        }
                    </a>
                    <a href="@Model.GetSortUrl("createdat", "desc")" 
                       class="sort-btn @(ViewData["CreatedSortClass"]?.ToString() == "sort-asc" || ViewData["CreatedSortClass"]?.ToString() == "sort-desc" ? "active" : "")">
                        Created
                        @if (ViewData["CreatedSortClass"]?.ToString() == "sort-asc")
                        {
                            <i class="bi bi-caret-up-fill"></i>
                        }
                        else if (ViewData["CreatedSortClass"]?.ToString() == "sort-desc")
                        {
                            <i class="bi bi-caret-down-fill"></i>
                        }
                    </a>
                    <a href="@Model.GetSortUrl("updatedat", "desc")" 
                       class="sort-btn @(ViewData["UpdatedSortClass"]?.ToString() == "sort-asc" || ViewData["UpdatedSortClass"]?.ToString() == "sort-desc" ? "active" : "")">
                        Modified
                        @if (ViewData["UpdatedSortClass"]?.ToString() == "sort-asc")
                        {
                            <i class="bi bi-caret-up-fill"></i>
                        }
                        else if (ViewData["UpdatedSortClass"]?.ToString() == "sort-desc")
                        {
                            <i class="bi bi-caret-down-fill"></i>
                        }
                    </a>
                </div>
            </div>
        </div>

        <!-- Projects Grid -->
        <div class="projects-grid">
            @foreach (var project in Model.Projects.Items)
            {
                <div class="project-card">
                    <!-- Card Header -->
                    <div class="project-card-header">
                        <div class="project-info">
                            <div class="project-icon-wrapper" style="--project-color: @(project.Color ?? "#059669")">
                                @if (!string.IsNullOrEmpty(project.Icon))
                                {
                                    <i class="bi bi-@(project.Icon)"></i>
                                }
                                else
                                {
                                    <i class="bi bi-kanban"></i>
                                }
                            </div>
                            <div class="project-title-section">
                                <a asp-page="./Details" asp-route-id="@project.Id" class="project-title">
                                    @project.Name
                                </a>
                                <div class="project-badges">
                                    @if (project.IsActive)
                                    {
                                        <span class="status-badge active">Active</span>
                                    }
                                    else
                                    {
                                        <span class="status-badge archived">Archived</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <!-- Actions Dropdown -->
                        <div class="dropdown">
                            <button class="project-actions-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end modern-dropdown">
                                <li>
                                    <a class="dropdown-item" asp-page="./Details" asp-route-id="@project.Id">
                                        <i class="bi bi-eye"></i>View Details
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-page="./Edit" asp-route-id="@project.Id">
                                        <i class="bi bi-pencil"></i>Edit
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                @if (project.IsActive)
                                {
                                    <li>
                                        <form method="post" asp-page-handler="Archive" asp-route-projectId="@project.Id" class="d-inline">
                                            <button type="submit" class="dropdown-item" 
                                                    onclick="return confirm('Are you sure you want to archive this project?')">
                                                <i class="bi bi-archive"></i>Archive
                                            </button>
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <form method="post" asp-page-handler="Restore" asp-route-projectId="@project.Id" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-arrow-counterclockwise"></i>Restore
                                            </button>
                                        </form>
                                    </li>
                                }
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-page-handler="Delete" asp-route-projectId="@project.Id" class="d-inline">
                                        <button type="submit" class="dropdown-item text-danger" 
                                                onclick="return confirm('Are you sure you want to delete this project? This action cannot be undone.')">
                                            <i class="bi bi-trash"></i>Delete
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="project-card-body">
                        @if (!string.IsNullOrEmpty(project.Description))
                        {
                            <p class="project-description">@project.Description</p>
                        }
                        else
                        {
                            <p class="project-description no-description">No description provided</p>
                        }

                        <!-- Project Stats -->
                        <div class="project-stats">
                            <div class="stat-item">
                                <div class="stat-icon blue">üìÑ</div>
                                <div class="stat-info">
                                    <span class="stat-value">@project.DocumentCount</span>
                                    <span class="stat-label">Documents</span>
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon yellow">üìÅ</div>
                                <div class="stat-info">
                                    <span class="stat-value">@project.FolderCount</span>
                                    <span class="stat-label">Folders</span>
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon green">üìä</div>
                                <div class="stat-info">
                                    <span class="stat-value">@(project.DocumentCount + project.FolderCount)</span>
                                    <span class="stat-label">Total Items</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Card Footer -->
                    <div class="project-card-footer">
                        <div class="footer-date">
                            <i class="bi bi-calendar3"></i>
                            <span>Created @project.CreatedAt.ToString("MMM d, yyyy")</span>
                        </div>
                        @if (project.UpdatedAt.HasValue)
                        {
                            <div class="footer-date">
                                <i class="bi bi-pencil"></i>
                                <span>@project.UpdatedAt.Value.ToString("MMM d, yyyy")</span>
                            </div>
                        }
                    </div>

                    <!-- View Details Link -->
                    <a asp-page="./Details" asp-route-id="@project.Id" class="project-card-link">
                        <span>View Project</span>
                        <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            }
        </div>

        <!-- Modern Pagination -->
        @if (Model.Projects.TotalPages > 1)
        {
            <div class="projects-pagination">
                @if (Model.Projects.PageNumber > 1)
                {
                    <a href="@Model.GetSortUrl(Model.Filter.SortBy, Model.Filter.SortDescending ? "desc" : "asc", Model.Projects.PageNumber - 1)" class="pagination-btn">
                        <i class="bi bi-chevron-left"></i>
                        <span>Previous</span>
                    </a>
                }

                <div class="pagination-numbers">
                    @for (int i = Math.Max(1, Model.Projects.PageNumber - 2); i <= Math.Min(Model.Projects.TotalPages, Model.Projects.PageNumber + 2); i++)
                    {
                        <a href="@Model.GetSortUrl(Model.Filter.SortBy, Model.Filter.SortDescending ? "desc" : "asc", i)" 
                           class="pagination-number @(i == Model.Projects.PageNumber ? "active" : "")">@i</a>
                    }
                </div>

                @if (Model.Projects.PageNumber < Model.Projects.TotalPages)
                {
                    <a href="@Model.GetSortUrl(Model.Filter.SortBy, Model.Filter.SortDescending ? "desc" : "asc", Model.Projects.PageNumber + 1)" class="pagination-btn">
                        <span>Next</span>
                        <i class="bi bi-chevron-right"></i>
                    </a>
                }
            </div>
        }
    }
</div>

