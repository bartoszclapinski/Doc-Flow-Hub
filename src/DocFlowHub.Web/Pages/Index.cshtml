        }

        .hero-content {
            position: relative;
            z-index: 2;
            text-align: center;
        }

        .hero-title {
            font-size: 3.5rem;
            font-weight: 700;
            margin-bottom: 1.5rem;
            line-height: 1.1;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            opacity: 0.95;
            margin-bottom: 3rem;
            line-height: 1.4;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .hero-cta {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
            margin-bottom: 4rem;
        }

        .cta-button {
            padding: 1rem 2.5rem;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 12px;
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .cta-primary {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
        }

        .cta-primary:hover {
            background: rgba(255, 255, 255, 0.3);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            color: white;
        }

        .cta-secondary {
            background: white;
            color: var(--accent-color);
            border: 2px solid white;
        }

        .cta-secondary:hover {
            background: rgba(255, 255, 255, 0.9);
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            color: var(--accent-color);
        }

        .hero-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 2rem;
            max-width: 800px;
            margin: 0 auto;
        }

        .hero-stat {
            text-align: center;
            padding: 1.5rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .hero-stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            display: block;
            margin-bottom: 0.5rem;
        }

        .hero-stat-label {
            font-size: 1rem;
            opacity: 0.9;
        }

        .features-section {
            padding: 80px 0;
            background: var(--container-bg);
        }

        .section-title {
            text-align: center;
            font-size: 2.5rem;
            font-weight: 700;
            color: var(--text-primary);
            margin-bottom: 1rem;
        }

        .section-subtitle {
            text-align: center;
            font-size: 1.2rem;
            color: var(--text-secondary);
            margin-bottom: 4rem;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .trust-section .section-subtitle {
            color: rgba(255, 255, 255, 0.9);
            font-weight: 500;
        }

        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
            margin-bottom: 4rem;
        }

        .feature-card {
            background: var(--container-bg);
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
            backdrop-filter: blur(20px);
        }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 25px 70px rgba(0, 0, 0, 0.15);
        }

        .feature-icon {
            font-size: 3rem;
            margin-bottom: 1.5rem;
            display: block;
        }

        .feature-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 1rem;
        }

        .feature-description {
            color: var(--text-secondary);
            line-height: 1.6;
        }

        .trust-section {
            padding: 80px 0;
            background: linear-gradient(135deg, var(--accent-color) 0%, rgba(5, 150, 105, 0.8) 100%);
            color: white;
            text-align: center;
        }

        .trust-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 3rem;
            max-width: 1000px;
            margin: 0 auto 4rem;
        }

        .trust-stat {
            padding: 2rem;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            backdrop-filter: blur(10px);
        }

        .trust-number {
            font-size: 3rem;
            font-weight: 700;
            display: block;
            margin-bottom: 0.5rem;
        }

        .trust-label {
            font-size: 1.1rem;
            opacity: 0.95;
        }

        .cta-section {
            padding: 80px 0;
            background: var(--container-bg);
            text-align: center;
        }

        .cta-card {
            background: var(--container-bg);
            padding: 4rem;
            border-radius: 24px;
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--border-color);
            backdrop-filter: blur(20px);
            max-width: 600px;
            margin: 0 auto;
        }

        @@media (max-width: 768px) {
            .landing-nav {
                padding: 0.75rem 0;
            }
            
            .nav-content {
                padding: 0 1rem;
            }
            
            .landing-logo {
                font-size: 1.5rem;
            }
            
            .nav-links {
                gap: 1rem;
            }
            
            .nav-link, .nav-cta {
                font-size: 0.9rem;
                padding: 0.5rem 1rem;
            }
            
            .landing-page {
                padding-top: 70px;
            }
            
            .hero-title {
                font-size: 2.5rem;
            }
            
            .hero-subtitle {
                font-size: 1.2rem;
            }
            
            .hero-cta {
                flex-direction: column;
                align-items: center;
            }
            
            .section-title {
                font-size: 2rem;
            }
            
            .features-grid {
                grid-template-columns: 1fr;
            }
            
            .hero-stats {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .trust-stats {
                grid-template-columns: repeat(2, 1fr);
            }
            
            /* Landing theme toggle removed */
        }
    </style>

    <div class="landing-page">
        <!-- Hero Section -->
        <section class="hero-section">
            <div class="container">
                <div class="hero-content">
                    <h1 class="hero-title">Transform Your Document Management</h1>
                    <p class="hero-subtitle">
                        Experience the future of document collaboration with AI-powered intelligence, 
                        seamless team workflows, and enterprise-grade security.
                    </p>
                    
                    <div class="hero-cta">
                        <a href="/Account/Register" class="cta-button cta-primary">
                            <i class="bi bi-rocket-takeoff"></i>
                            Start Free Trial
                        </a>
                        <a href="/Account/Login" class="cta-button cta-secondary">
                            <i class="bi bi-box-arrow-in-right"></i>
                            Sign In
                        </a>
                    </div>

                    <div class="hero-stats">
                        <div class="hero-stat">
                            <span class="hero-stat-number">50K+</span>
                            <span class="hero-stat-label">Documents Processed</span>
                        </div>
                        <div class="hero-stat">
                            <span class="hero-stat-number">1K+</span>
                            <span class="hero-stat-label">Active Teams</span>
                        </div>
                        <div class="hero-stat">
                            <span class="hero-stat-number">99.9%</span>
                            <span class="hero-stat-label">Uptime</span>
                        </div>
                        <div class="hero-stat">
                            <span class="hero-stat-number">24/7</span>
                            <span class="hero-stat-label">Support</span>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Features Section -->
        <section class="features-section">
            <div class="container">
                <h2 class="section-title">Powerful Features for Modern Teams</h2>
                <p class="section-subtitle">
                    Everything you need to manage, collaborate, and innovate with your documents
                </p>

                <div class="features-grid">
                    <div class="feature-card">
                        <span class="feature-icon">ü§ñ</span>
                        <h3 class="feature-title">AI-Powered Intelligence</h3>
                        <p class="feature-description">
                            Automatically generate summaries, compare versions, and extract insights 
                            from your documents using advanced AI technology.
                        </p>
                    </div>

                    <div class="feature-card">
                        <span class="feature-icon">üë•</span>
                        <h3 class="feature-title">Advanced Team Collaboration</h3>
                        <p class="feature-description">
                            Create teams, share documents, and collaborate in real-time with 
                            granular permission controls and activity tracking.
                        </p>
                    </div>

                    <div class="feature-card">
                        <span class="feature-icon">üîí</span>
                        <h3 class="feature-title">Enterprise-Grade Security</h3>
                        <p class="feature-description">
                            Bank-level encryption, role-based access control, and compliance 
                            with industry standards keep your data secure.
                        </p>
                    </div>

                    <div class="feature-card">
                        <span class="feature-icon">üìä</span>
                        <h3 class="feature-title">Powerful Analytics</h3>
                        <p class="feature-description">
                            Gain insights into document usage, team productivity, and system 
                            performance with comprehensive analytics dashboards.
                        </p>
                    </div>

                    <div class="feature-card">
                        <span class="feature-icon">üìÅ</span>
                        <h3 class="feature-title">Smart Organization</h3>
                        <p class="feature-description">
                            Organize documents with projects, folders, categories, and smart 
                            tagging for effortless content discovery.
                        </p>
                    </div>

                    <div class="feature-card">
                        <span class="feature-icon">‚ö°</span>
                        <h3 class="feature-title">Lightning Fast</h3>
                        <p class="feature-description">
                            Built on modern technology stack for maximum performance, 
                            scalability, and reliability at enterprise scale.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Trust Section -->
        <section class="trust-section">
            <div class="container">
                <h2 class="section-title">Trusted by Teams Worldwide</h2>
                <p class="section-subtitle">
                    Join thousands of organizations already transforming their document workflows
                </p>

                <div class="trust-stats">
                    <div class="trust-stat">
                        <span class="trust-number">500TB+</span>
                        <span class="trust-label">Data Processed</span>
                    </div>
                    <div class="trust-stat">
                        <span class="trust-number">150+</span>
                        <span class="trust-label">Countries</span>
                    </div>
                    <div class="trust-stat">
                        <span class="trust-number">98%</span>
                        <span class="trust-label">Customer Satisfaction</span>
                    </div>
                    <div class="trust-stat">
                        <span class="trust-number">SOC2</span>
                        <span class="trust-label">Compliant</span>
                    </div>
                </div>
            </div>
        </section>

        <!-- Call to Action Section -->
        <section class="cta-section">
            <div class="container">
                <div class="cta-card">
                    <h2 class="section-title">Ready to Get Started?</h2>
                    <p class="section-subtitle">
                        Join thousands of teams already using DocFlowHub to transform their document workflows.
                        Start your free trial today - no credit card required.
                    </p>
                    
                    <div class="hero-cta">
                        <a href="/Account/Register" class="cta-button" style="background: linear-gradient(135deg, var(--accent-color) 0%, rgba(5, 150, 105, 0.8) 100%); color: white; border: none;">
                            <i class="bi bi-rocket-takeoff"></i>
                            Start Free Trial
                        </a>
                        <a href="#features" class="cta-button" style="background: transparent; color: var(--accent-color); border: 2px solid var(--accent-color);">
                            <i class="bi bi-play-circle"></i>
                            Learn More
                        </a>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme-manager.js" asp-append-version="true"></script>
    <script>
        // Initialize theme manager for landing page
        document.addEventListener('DOMContentLoaded', function() {
            if (window.ThemeManager) {
                window.ThemeManager.setupThemeToggle();
            }
        });
    </script>
    </body>
    </html>
}
else
{
    <!-- ===== MODERN DASHBOARD FOR AUTHENTICATED USERS ===== -->
    <div class="dashboard-container">
        <!-- Modern Page Header -->
        <div class="dashboard-page-header">
            <div class="page-header-content">
                <div class="page-header-info">
                    <h1 class="page-title">
                        <div class="page-icon">üè†</div>
                        Welcome, @Model.UserName!
                    </h1>
                    <p class="page-subtitle">Here's what's happening with your documents today</p>
                </div>
                <div class="page-header-actions">
                    <a asp-page="/Documents/Upload" class="modern-btn modern-btn-primary">
                        <i class="bi bi-cloud-upload"></i>
                        <span>Upload Document</span>
                    </a>
                </div>
            </div>
        </div>

        <!-- Quick Actions Panel -->
        <div class="dashboard-quick-actions">
            <div class="quick-actions-header">
                <h3 class="quick-actions-title">
                    <i class="bi bi-lightning-charge"></i>
                    Quick Actions
                </h3>
                <p class="quick-actions-subtitle">Get started with common tasks</p>
            </div>
            <div class="quick-actions-grid">
                <a asp-page="/Documents/Upload" class="quick-action-card">
                    <div class="quick-action-icon blue">
                        <i class="bi bi-cloud-upload"></i>
                    </div>
                    <div class="quick-action-info">
                        <h4>Upload Document</h4>
                        <p>Add new files to your library</p>
                    </div>
                </a>
                <a asp-page="/Documents/Index" class="quick-action-card">
                    <div class="quick-action-icon green">
                        <i class="bi bi-folder2-open"></i>
                    </div>
                    <div class="quick-action-info">
                        <h4>Browse Documents</h4>
                        <p>View and manage your files</p>
                    </div>
                </a>
                <a asp-page="/Teams/Create" class="quick-action-card">
                    <div class="quick-action-icon cyan">
                        <i class="bi bi-people-fill"></i>
                    </div>
                    <div class="quick-action-info">
                        <h4>Create Team</h4>
                        <p>Start collaborating with others</p>
                    </div>
                </a>
                <a asp-page="/Projects/Index" class="quick-action-card">
                    <div class="quick-action-icon yellow">
                        <i class="bi bi-kanban"></i>
                    </div>
                    <div class="quick-action-info">
                        <h4>View Projects</h4>
                        <p>Organize your work</p>
                    </div>
                </a>
            </div>
        </div>

        <!-- Statistics Cards Grid -->
        <div class="dashboard-stats-grid">
