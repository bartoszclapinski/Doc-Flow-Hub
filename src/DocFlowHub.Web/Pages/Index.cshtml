                                <a asp-page="/Documents/Details" asp-route-id="@doc.Id" class="content-item document-item">
                                    <div class="content-item-icon @GetFileIconClass(doc.FileType)">
                                        <i class="bi @GetFileIcon(doc.FileType)"></i>
                                    </div>
