                        <div class="dashboard-stat-change">team documents</div>
                    </div>
                    <div class="dashboard-stat-icon">üîó</div>
                </div>
            </div>
        </div>

        <!-- Recent Documents, Teams, and Activity -->
        <div class="dashboard-content-grid">
            <!-- Recent Documents -->
            <div class="dashboard-content-card">
