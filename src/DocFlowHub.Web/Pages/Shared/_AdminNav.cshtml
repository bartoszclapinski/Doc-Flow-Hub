@{
    var activePage = ViewData["ActivePage"]?.ToString() ?? "";
}

<div class="list-group mb-4">
    <a asp-page="/Admin/Index" class="list-group-item list-group-item-action @(activePage == "Dashboard" ? "active" : "")">
        <i class="fas fa-tachometer-alt me-2"></i> Dashboard
    </a>
    <a asp-page="/Admin/Users/Index" class="list-group-item list-group-item-action @(activePage == "Users" ? "active" : "")">
        <i class="fas fa-users me-2"></i> Users
    </a>
    <a asp-page="/Admin/Roles/Index" class="list-group-item list-group-item-action @(activePage == "Roles" ? "active" : "")">
        <i class="fas fa-user-tag me-2"></i> Roles
    </a>
    <a asp-page="/Admin/Settings/Index" class="list-group-item list-group-item-action @(activePage == "Settings" ? "active" : "")">
        <i class="fas fa-cog me-2"></i> Settings
    </a>
</div> 