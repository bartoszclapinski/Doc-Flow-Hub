@page
@model DocFlowHub.Web.Pages.Account.Manage.EditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
    ViewData["ActivePage"] = "EditProfile";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            <div class="card">
                <div class="card-header">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <partial name="_StatusMessage" />
                    
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.FirstName" class="form-label"></label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.LastName" class="form-label"></label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Bio" class="form-label"></label>
                            <textarea asp-for="Input.Bio" class="form-control" rows="3" maxlength="500"></textarea>
                            <span asp-validation-for="Input.Bio" class="text-danger"></span>
                            <div class="form-text">Maximum 500 characters.</div>
                        </div>

                        <div class="mt-4">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add character counter for Bio field
        const bioTextarea = document.querySelector('#Input_Bio');
        const bioCounter = document.createElement('small');
        bioCounter.className = 'text-muted';
        bioTextarea.parentNode.insertBefore(bioCounter, bioTextarea.nextSibling);
        
        function updateBioCounter() {
            const remaining = 500 - bioTextarea.value.length;
            bioCounter.textContent = `${remaining} characters remaining`;
        }
        
        bioTextarea.addEventListener('input', updateBioCounter);
        updateBioCounter();
    </script>
} 